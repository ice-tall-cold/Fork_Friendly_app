<div class="container contain col-xs-10 col-xs-offset-1 no-padding" style="margin-top: 32px;">
  <div class="center row col-xs-12 margin-fix no-padding">
    <h1 class="fancy_header" style="margin-top: 0px; padding-bottom: 3px;">Choose any preferred dietary considerations</h1>
  </div>
  
  <%= form_for :concerns do |f| %>
    <div class="form-group col-xs-2 col-xs-offset-1 margin-tb">
      <%= f.label :calorie_friendly, "...:", class: "col-xs-12 control-label btn btn-concerns img-check" do %>
        <div class="col-xs-12 center">
          <img src=<%=image_url('concerns/salt.png')%> alt="..." class="img-responsive">
        </div>
        <div class="col-xs-12 center no-padding">
          <h5>Salt Shy</h5>
        </div>
      <% end %>
      <div class="hidden">
        <%= f.check_box :calorie_friendly, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group col-xs-2 margin-tb">
      <%= f.label :heart_healthy, "...:", class: "col-xs-12 control-label btn btn-concerns img-check" do %>
        <div class="col-xs-12 center">
          <img src=<%=image_url('concerns/heart.png')%> alt="..." class="img-responsive">
        </div>
        <div class="col-xs-12 center no-padding">
          <h5>Heart Healthy</h5>
        </div>
      <% end %>
      <div class="hidden">
        <%= f.check_box :heart_healthy, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group col-xs-2 margin-tb">
      <%= f.label :sodium_friendly, "...:", class: "col-xs-12 control-label btn btn-concerns img-check" do %>
        <div class="col-xs-12 center">
          <img src=<%=image_url('concerns/fork.png')%> alt="..." class="img-responsive">
        </div>
        <div class="col-xs-12 center no-padding">
          <h5>Wieght Loss</h5>
        </div>
      <% end %>
      <div class="hidden">
        <%= f.check_box :sodium_friendly, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group col-xs-2 margin-tb">
      <%= f.label :carb_friendly, "...:", class: "col-xs-12 control-label btn btn-concerns img-check" do %>
        <div class="col-xs-12 center">
          <img src=<%=image_url('concerns/F.png')%> alt="..." class="img-responsive">
        </div>
        <div class="col-xs-12 center no-padding">
          <h5>FOD Map</h5>
        </div>
      <% end %>
      <div class="hidden">
        <%= f.check_box :carb_friendly, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group col-xs-2 margin-tb">
      <%= f.label :kidney_friendly, "...:", class: "col-xs-12 control-label btn btn-concerns img-check" do %>
        <div class="col-xs-12 center">
          <img src=<%=image_url('concerns/Down.png')%> alt="..." class="img-responsive">
        </div>
        <div class="col-xs-12 center no-padding">
          <h5>Kidney Friendly</h5>
        </div>
      <% end %>
      <div class="hidden">
        <%= f.check_box :kidney_friendly, class: "form-control" %>
      </div>
    </div>
    <%= f.submit 'Start Shopping', :class => 'btn btn-primary center col-xs-2 col-xs-offset-5 margin-tb-t' %>
  <% end %>
</div>


<script type="text/javascript">
  $(document).ready(function(e){
    $(".img-check").click(function(){
      $(this).toggleClass("checked");
    });
  });
</script>

