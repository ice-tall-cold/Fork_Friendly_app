

<div id="pageContainer">

  <div id="topdiv"></div>
  <div id="middlediv">
      <div class="center jumbotron">
        <h2>Welcome to Fork Friendly</h2>
      </div>
    
    <%= form_for(:session, url: login_path) do |f| %>
    <div id="centerOfPageContainer">

      <div class="middleCenterDivs"id="centerDiv1">
        <p = class="divText" id="emailLabel"> <%= f.label :Email %> </p>
      </div>

      <div class="middleCenterDivs" id="centerDiv2">
        <%= f.email_field :Email, class: 'form-control' %>
      </div>

      <div class="middleCenterDivs" id="centerDiv3">
        <p = class="divText" id="passwordLabel"> <%= f.label :password %> </p>
      </div>

      <div class="middleCenterDivs" id="centerDiv4">
        <div id="passwordDiv">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="middleCenterDivs" id="centerDiv5">
        <h2>New user? <%= link_to "Sign up now!", signup_path, :id => 'sign'%></h2>
      </div>
      
      <div class= "button_container"> 
          <%= f.submit "Log in", class: "btn btn-primary", :id => 'log_in_submit' %> 
          <!--<p class="divText">></p>-->
        </div>

    </div>
    <% end %>


  </div>
  <div id="bottomdiv"></div>
</div>



